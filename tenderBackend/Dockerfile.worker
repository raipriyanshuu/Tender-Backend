FROM python:3.11-slim

WORKDIR /app

# requirements.txt is in the build context root (tenderBackend/)
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# copy everything from tenderBackend/ into /app
COPY . /app

ENV PYTHONUNBUFFERED=1

CMD ["python", "-m", "workers.queue_worker"]
