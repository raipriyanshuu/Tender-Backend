FROM python:3.11-slim

WORKDIR /app

# Copy requirements first (cache-friendly)
COPY tenderBackend/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy your backend code (includes workers/)
COPY tenderBackend/ /app/

ENV PYTHONUNBUFFERED=1

CMD ["python", "-m", "workers.queue_worker"]
